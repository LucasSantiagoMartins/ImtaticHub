<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar detalhes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/auth/css/add_details.css">
</head>
<body>
    <div class="cards">
        <div class="card student-card">
            <h2>Estudante</h2>
            <p class="text-center">Consumidor do conhecimento e estou no processo de aprendizado.</p>
            <button id="student-card-btn" class="button">Selecionar</button>
        </div>
        <div class="card teacher-card">
            <h2>Professor</h2>
            <p class="text-center">Fornecedor e facilitador do conhecimento.</p>
            <button id="teacher-card-btn" class="mt-2 button">Selecionar</button>
        </div>
    </div>
    <div class="container" id="add-details-forms" >
        <div id="student-form-div">
            <h1>Suas informações como estudante</h1>
            <div id="message-div"></div>
            <form action="" id="student-form" class="mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" placeholder="Nome completo..." name="full_name" id="" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <input type="text" placeholder="Nacionalidade..." name="nationality" class="form-control">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <select name="gender" class="form-control">
                            <option value="">Gênero</option>
                            <option value="male">Masculino</option>
                            <option value="female">Feminino</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input type="text" placeholder="Endereço..." name="address" class="form-control">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <input type="text" placeholder="Turma..." name="class" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <input type="text" placeholder="Classe..." name="grade" class="form-control">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <input type="number" placeholder="Número de matrícula..." name="registration_number" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <select name="course" class="form-control">
                            <% courses.forEach(course => { %>
                                <option value="">Curso</option>
                                <option value="<%= course.id %>"><%= course.name %> %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="m-1">Data de nascimento</label>
                        <input type="date" name="birth_date" class="form-control">
                    </div>    
                    <div class="col-md-6">
                        <label class="m-1">Ano académico</label>
                        <input type="date" name="academic_year" class="form-control">
                    </div>
                </div>
                
                <button type="submit" class="btn mb-5 button">Concluir</button>
            </form>
        </div>
        <div id="teacher-form-div">
            <h1>Suas informações como professor</h1>
            <div id="message-div"></div>
            <form action="" id="teacher-form" class="mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" placeholder="Nome completo..." name="full_name" id="" class="form-control">
                    </div>
                    <div class="col-md-6">
                        <input type="text" placeholder="Nacionalidade..." name="nationality" class="form-control">
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <select name="gender" class="form-control">
                            <option value="">Gênero</option>
                            <option value="male">Masculino</option>
                            <option value="female">Feminino</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input type="text" placeholder="Endereço..." name="address" class="form-control">
                    </div>
                </div>
                <button type="submit" class="btn button">Concluir</button>
            </form>
        </div>
    </div>
    <div class="overlay">
        <div class="loader"></div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/general/js/index.js" type="text/javascript"></script>
    <script src="/auth/js/add_details.js" type="text/javascript"></script>
    <script src="/auth/js/request_handler.js" type="text/javascript"></script>
</body>
</html>