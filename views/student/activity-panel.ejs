<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minhas Atividades e Provas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/base/css/base.css">
    <link rel="stylesheet" href="/general/css/colors.css">
    <link rel="stylesheet" href="/student/css/activity-panel.css">
</head>
<body>

    <div class="overlay">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Carregando...</span>
        </div>
    </div>

    <div class="container mt-5">
        <h3 class="mb-4 fw-bold">Calendário de Provas, Tarefas e Trabalhos</h3>

        <% if (errorMessage) { %>
            <div class="alert alert-danger text-center" role="alert">
                <%= errorMessage %>
            </div>
        <% } %>

        <div class="calendar-container card p-3 shadow-sm mb-4">
            <div class="calendar-header">
                <button class="btn btn-outline-primary" id="prevMonth"><i class="fas fa-chevron-left"></i></button>
                <h4 id="currentMonthYear" class="mb-0"></h4>
                <button class="btn btn-outline-primary" id="nextMonth"><i class="fas fa-chevron-right"></i></button>
            </div>
            <div class="calendar-grid" id="calendar-grid">
                <div class="day-name">Dom</div>
                <div class="day-name">Seg</div>
                <div class="day-name">Ter</div>
                <div class="day-name">Qua</div>
                <div class="day-name">Qui</div>
                <div class="day-name">Sex</div>
                <div class="day-name">Sáb</div>
            </div>
        </div>

        <h2 class="mb-4 mt-4 fw-bold" id="upcomingActivityTitle">Suas Atividades Acadêmicas</h2>
        <div id="eventCardsContainer" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
            <p class="text-center text-muted w-100" id="noEventsMessage">Nenhuma atividade futura no momento.</p>
        </div>

        <div id="submissionFormsContainer" style="display: none;">
            <h2 class="mb-4 mt-4 fw-bold" id="formTitle"></h2>
            <div id="dynamicFormContent"></div>
            <button id="backToEventsBtn" class="btn btn-secondary mt-4 mb-4"><i class="fas fa-arrow-alt-circle-left me-2"></i>Voltar para a lista de atividades</button>
        </div>
        <br>
        <br>
    </div>

    <script>
    // Verifica se payloadData existe e tem as propriedades esperadas
    const academicTasks = <%- JSON.stringify(payloadData.academicTasks || []) %>;
    const exams = <%- JSON.stringify(payloadData.exams || []) %>;

    // Combina todas as tarefas e provas em um único array para o front-end
    window.allEvents = [...academicTasks, ...exams];

    
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/base/js/base.js" type="text/javascript"></script>
    <script src="/student/js/activity-panel.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/base/js/base.js" type="text/javascript"></script>
    <script src="/general/js/request-handler.js" type="text/javascript"></script>

</body>
</html>