<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar informações</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/user/css/add-details.css">
    <link rel="stylesheet" href="/base/css/base.css">
    <link rel="stylesheet" href="/general/css/colors.css">
</head>
<body>
    <div class="container" id="add-details-forms" >
        <div class="form-div">
            <h1>Suas informações como estudante</h1>
            <div class="justify-content-center">
                <div class="message-div"></div>
            </div>
            <form action="/usuarios/adicionar-informacoes-estudante" method="POST"  class="mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="full_name_input" name="fullName" required>
                            <label for="full_name_input">Nome completo</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="nationality_input" name="nationality" required>
                            <label for="nationality_input">Nacionalidade</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <select id="gender_input" name="gender" required>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                            </select>
                            <label for="gender_input">Gênero</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="address_input" name="address">
                            <label for="address_input">Endereço (Opcional)</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="class_input" name="studentClass" required>
                            <label for="class_input">Turma</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="grade_input" name="grade" required>
                            <label for="grade_input">Classe</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="registration_number_input" name="registrationNumber" required>
                            <label for="registration_number_input">Número de matrícula</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <select id="course_input" name="courseId" required>
                                    <% courses.forEach(course => { %>
                                        <option value="<%= course.id %>"><%= course.name %> %></option>
                                    <% }); %>
                            </select>
                            <label for="course_input">Qual é o seu curso</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="date" id="birth_date_input" name="birthDate">
                            <label >Data de nascimento (Opcional)</label>
                        </div>
                    </div>    
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="academic_year_input" name="academicYear" placeholder="Exemplo: 2024/2025">
                            <label for="academic_year_input">Ano académico</label>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="btn button">Concluir</button>
            </form>
        </div>
    <div class="overlay">
        <div class="loader"></div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/base/js/base.js" type="text/javascript"></script>
    <script src="/user/js/add-details.js" type="text/javascript"></script>
    <script src="/general/js/form-validation.js" type="text/javascript"></script>
    <script src="/general/js/request-handler.js" type="text/javascript"></script>
</body>
</html>